{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "ScriptHost"],
    "resolveJsonModule": true
  },
  "paths": {
    "@/*": ["src/*"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
